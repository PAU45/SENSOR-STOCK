---
import BaseLayout from '../layouts/Layout.astro'; // Corregido a Layout.astro según tu estructura

// Importa todas tus secciones
// Ajusta los nombres de importación para que coincidan con tus nombres de archivo EXACTOS
import Hero from '../components/Hero.astro'; // Sin subcarpeta 'sections' según tu imagen
import Problem from '../components/Problema.astro'; // Corregido de 'Problem' a 'Problema'
import Solution from '../components/Solucion.astro'; // Corregido de 'Solution' a 'Solucion'
import Features from '../components/Caracteristicas.astro'; // Corregido de 'Features' a 'Caracteristicas'
import Benefits from '../components/Beneficios.astro'; // Corregido de 'Benefits' a 'Beneficios'
import AboutUs from '../components/AboutUs.astro';
import TargetAudience from '../components/Target.astro'; // Corregido de 'TargetAudience' a 'Target'
import Contact from '../components/Contacto.astro'; // Corregido de 'Contact' a 'Contacto'
import Footer from '../components/Footer.astro';
import Servicios from '../components/ServicePlans.astro';
// No veo un 'Welcome.astro' en tu estructura de uso, así que no lo incluyo.
---

<BaseLayout title="Sensor Stock - Optimiza tu Inventario con Visión Artificial">
 
    <main>
        <Hero />
        <Problem />
        <Solution />
        <Features />
        <Servicios />
        <Benefits />
        <AboutUs />
        <TargetAudience />
        <Contact />
    </main>

    <Footer />
</BaseLayout>

<style is:global>
    /* Puedes añadir estilos específicos de la página aquí si es necesario,
       pero la mayoría debería ir en los archivos CSS importados por main.css */
    main {
        /* Para asegurar que el main no tenga márgenes inesperados */
        margin-top: 0; 
    }
</style>