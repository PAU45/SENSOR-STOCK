<style>
  /* Estos estilos son específicos para este componente y se aplicarán de forma scoped.
     Las clases de utilidad como bg-gray-50, text-white, mb-4, etc., se asume que vienen de main.css.
  */

  /* Estilos para el contenedor de la cuadrícula de planes */
  .service-plans-grid {
    display: grid;
    grid-template-columns: 1fr; /* Una columna por defecto en móvil */
    gap: 2rem; /* Espacio entre tarjetas */
    align-items: stretch; /* Crucial para que todas las tarjetas tengan la misma altura */
  }

  /* Media query para 3 columnas en pantallas medianas y grandes */
  @media (min-width: 768px) {
    .service-plans-grid {
      grid-template-columns: repeat(3, 1fr); /* Tres columnas en pantallas md */
    }
  }

  /* Estilos para cada tarjeta de plan */
  .service-plan-card {
    display: flex;
    flex-direction: column; /* Organiza el contenido en columna */
    align-items: center; /* Centra el contenido horizontalmente (para el título, párrafo, etc.) */
    text-align: center;
    padding: 2rem; /* padding: 2rem; para espacio interno */
    height: 100%; /* La tarjeta ocupa el 100% de la altura de su celda de grid */
    transition: transform 0.3s ease-in-out; /* Transición para el efecto hover */
    box-sizing: border-box; /* Asegura que padding no sume al width/height */
  }

  .service-plan-card:hover {
    transform: scale(1.05); /* Efecto de escala al pasar el ratón */
  }

  /* Contenedor de las características de la lista */
  .features-list-container {
    flex-grow: 1; /* Permite que este div ocupe el espacio restante */
    width: 100%; /* Asegura que la lista ocupe todo el ancho disponible */
    display: flex;
    flex-direction: column;
    justify-content: flex-start; /* Alinea las características en la parte superior del espacio disponible */
    margin-bottom: 1.5rem; /* mb-6 */
  }

  /* Estilos específicos para la lista de características */
  .plan-features-list { /* Target the ul with this class */
    list-style: none; /* Elimina los puntos por defecto de la lista */
    padding: 0;
    margin: 0 auto; /* Centra la lista si su max-width es menor que el contenedor */
    max-width: 280px; /* Asegura que la lista no se extienda demasiado */
    text-align: left; /* Asegura que el texto de la lista esté a la izquierda */
    width: 100%; /* Asegura que el ul toma el 100% del espacio disponible hasta max-width */
  }

  .plan-features-list li {
    display: flex;
    align-items: flex-start; /* Alinea ícono y texto al inicio de la línea (arriba), incluso si el texto se envuelve */
    margin-bottom: 0.75rem; /* Espaciado entre elementos de lista para mejor legibilidad */
    line-height: 1.4; /* Mejora la legibilidad del texto de la lista */
  }
  
  .plan-features-list li i { /* Icono dentro del elemento de la lista */
    font-size: 1.6em; /* **Aumentado para que los iconos sean más visibles y no "achicados"** */
    margin-right: 0.75rem; /* Espacio entre el icono y el texto */
    flex-shrink: 0; /* Evita que el icono se encoja si el texto es muy largo */
    margin-top: 0.15em; /* Ajusta la posición vertical del icono para que se alinee mejor con el texto al inicio */
  }

  /* Estilos para los botones dentro de las tarjetas */
  .plan-button {
    margin-top: auto; /* Empuja el botón al final de la tarjeta */
  }

/* Estilo específico para el botón del Plan Estándar (blanco sobre fondo oscuro) */
.featured-plan-button {
  background-color: green; /* Verde */

}

  .featured-plan-button:hover {
    background-color: var(--light-color); /* Un blanco con toque azulado en hover */
    color: var(--dark-color); /* Azul marino profundo en hover */
  }
</style>